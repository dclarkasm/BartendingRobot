<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ManualActivity" >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rightButton"
        android:layout_alignLeft="@+id/rightButton"
        android:layout_marginLeft="15dp"
        android:text="RIGHT" />

    <ImageButton
        android:id="@+id/rightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/homebutton"
        android:layout_toRightOf="@+id/homebutton"
        android:src="@drawable/rightbutton" />

    <ImageButton
        android:id="@+id/homebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fwdButton"
        android:layout_toRightOf="@+id/leftButton"
        android:src="@drawable/homeposbutton" />

    <ImageButton
        android:id="@+id/leftButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/fwdButton"
        android:src="@drawable/leftbutton" />

    <ImageButton
        android:id="@+id/fwdButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_toLeftOf="@+id/textView3"
        android:src="@drawable/upbutton" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/fwdButton"
        android:text="FORWARD" />

    <ImageButton
        android:id="@+id/revButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homebutton"
        android:layout_toRightOf="@+id/leftButton"
        android:src="@drawable/downbutton" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/revButton"
        android:text="REVERSE" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/leftButton"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="19dp"
        android:text="LEFT" />

    <ImageButton
        android:id="@+id/upButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/upbutton" />

    <ImageButton
        android:id="@+id/downButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_alignLeft="@+id/upButton"
        android:src="@drawable/downbutton" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/upButton"
        android:layout_alignRight="@+id/upButton"
        android:layout_marginRight="26dp"
        android:text="UP" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/downButton"
        android:text="    DOWN" />

    <Button
        android:id="@+id/sol2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView02"
        android:layout_toRightOf="@+id/sol1Button"
        android:text="2" />

    <Button
        android:id="@+id/sol3Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sol2Button"
        android:layout_alignBottom="@+id/sol2Button"
        android:layout_toRightOf="@+id/sol2Button"
        android:text="3" />

    <Button
        android:id="@+id/sol4Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sol3Button"
        android:layout_alignBottom="@+id/sol3Button"
        android:layout_toRightOf="@+id/sol3Button"
        android:text="4" />

    <Button
        android:id="@+id/sol1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sol2Button"
        android:layout_alignBottom="@+id/sol2Button"
        android:layout_alignLeft="@+id/textView2"
        android:layout_marginLeft="14dp"
        android:text="1" />

    <Button
        android:id="@+id/sol8Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sol6Button"
        android:layout_alignBottom="@+id/sol6Button"
        android:layout_alignLeft="@+id/sol4Button"
        android:text="8" />

    <Button
        android:id="@+id/sol5Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sol1Button"
        android:layout_below="@+id/sol1Button"
        android:text="5" />

    <Button
        android:id="@+id/sol6Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sol5Button"
        android:layout_alignBottom="@+id/sol5Button"
        android:layout_toRightOf="@+id/sol5Button"
        android:text="6" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView3"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="46dp"
        android:text="SOLENOIDS" />

    <Button
        android:id="@+id/sol7Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sol8Button"
        android:layout_alignBottom="@+id/sol8Button"
        android:layout_toLeftOf="@+id/sol8Button"
        android:text="7" />

</RelativeLayout>